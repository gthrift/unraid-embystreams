<?xml version='1.0' standalone='yes'?>
<!DOCTYPE PLUGIN [
<!ENTITY name      "embystreams">
<!ENTITY author    "gthrift">
<!ENTITY version   "2026.01.06">
<!ENTITY launch    "Settings/EmbyStreamsSettings">
<!ENTITY gitURL    "https://raw.githubusercontent.com/gthrift/unraid-embystreams/master">
<!ENTITY pluginURL "&gitURL;/embystreams.plg">
<!ENTITY emhttp    "/usr/local/emhttp/plugins/&name;">
<!ENTITY plgPATH   "/boot/config/plugins/&name;">
]>

<PLUGIN name="&name;" 
        author="&author;" 
        version="&version;" 
        launch="&launch;" 
        pluginURL="&pluginURL;" 
        support="https://github.com/gthrift/unraid-embystreams/issues"
        project="https://github.com/gthrift/unraid-embystreams/"
        readme="https://github.com/gthrift/unraid-embystreams/#readme"
        icon="emby.png">

<CHANGES>
###2026.01.06
- Initial release.
</CHANGES>

<OVERVIEW>
A plugin to create a dashboard widget that shows your active Emby streams
</OVERVIEW>

<FILE Name="&emhttp;/EmbyStreamsSettings.page">
<URL>&gitURL;/src/EmbyStreamsSettings.page</URL>
</FILE>

<FILE Name="&emhttp;/EmbyStreams.page">
<URL>&gitURL;/src/EmbyStreams.page</URL>
</FILE>

<FILE Name="&emhttp;/embystreams_api.php">
<URL>&gitURL;/src/embystreams_api.php</URL>
</FILE>

<FILE Name="&emhttp;/emby.png">
<URL>&gitURL;/metadata/emby.png</URL>
</FILE>

<FILE Run="/bin/bash">
<INLINE>
# 1. Create Config Directory
mkdir -p "&plgPATH;"

# 2. Set Default Config if missing
# We use &gt; for redirection to satisfy XML parser
if [ ! -f "&plgPATH;/embystreams.cfg" ]; then
    echo "HOST=''" &gt; "&plgPATH;/embystreams.cfg"
    echo "PORT='8096'" &gt;&gt; "&plgPATH;/embystreams.cfg"
    echo "API_KEY=''" &gt;&gt; "&plgPATH;/embystreams.cfg"
    echo "POLL_INTERVAL='5'" &gt;&gt; "&plgPATH;/embystreams.cfg"
    echo "DISPLAY_WIDGET='1'" &gt;&gt; "&plgPATH;/embystreams.cfg"
    echo "DISPLAY_NAV='1'" &gt;&gt; "&plgPATH;/embystreams.cfg"
fi

# 4. TOGGLE LOGIC
CFG_FILE="&plgPATH;/embystreams.cfg"
WIDGET_FILE="&emhttp;/EmbyStreams.page"

# Load the config directly into Bash (Safest method)
if [ -f "$CFG_FILE" ]; then
    source "$CFG_FILE"
fi

# Default to 1 if the variable didn't load for some reason
DISPLAY_WIDGET="${DISPLAY_WIDGET:-1}"

# Rename logic
if [ "$DISPLAY_WIDGET" == "0" ]; then
    # Hide: Rename .page to .page.off
    if [ -f "$WIDGET_FILE" ]; then
        mv "$WIDGET_FILE" "$WIDGET_FILE.off"
    fi
else
    # Show: Rename .page.off back to .page
    if [ -f "$WIDGET_FILE.off" ]; then
        mv "$WIDGET_FILE.off" "$WIDGET_FILE"
    fi
fi

echo ""
echo "-----------------------------------------------------------"
echo " &name; has been installed."
echo " Version: &version;"
echo "-----------------------------------------------------------"
echo ""
</INLINE>
</FILE>

<FILE Run="/bin/bash" Method="remove">
<INLINE>
echo "Uninstalling &name;..."

# 1. Remove the WebUI files (The 'software')
rm -rf "&emhttp;"

# 2. Remove the PLG file itself
# Corrected path: points to the root plugins folder, not the subdirectory
rm -f "/boot/config/plugins/&name;.plg"

# 3. Cleanup artifacts (if any existed)
rm -f "&plgPATH;/*.txz"

# Note: We intentionally preserve &plgPATH;/embystreams.cfg 
# so user settings are saved if they reinstall.

echo ""
echo "-----------------------------------------------------------"
echo " &name; has been uninstalled."
echo " Version: &version;"
echo "-----------------------------------------------------------"
echo ""
</INLINE>
</FILE>

</PLUGIN>
